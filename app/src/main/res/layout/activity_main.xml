<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Heifetz">

        <FrameLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                tools:context=".Heifetz">
            <ListView
                    android:id="@+id/ma_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <android.support.design.widget.FloatingActionButton
                    android:id="@+id/ma_addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:scaleType="center"
                    app:srcCompat="@drawable/add"
            />
        </FrameLayout>
        <android.support.design.widget.BottomNavigationView
                android:id="@+id/ma_botNav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimary"
                app:itemIconTint="@color/bottom_navigation_item_icon"
                app:itemTextColor="@color/bottom_navigation_item_icon"
                app:menu="@menu/bottom_navigation_menu"/>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/ma_showCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:background="@color/colorAccent"
            android:layout_gravity="bottom|center"
            android:layout_margin="32dp"
            android:scaleType="center"
            app:srcCompat="@drawable/card"
    />
</FrameLayout>