<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              android:background="#0000"
              android:padding="4dp"
              android:orientation="vertical">

    <TextView
            android:id="@+id/lw_textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:layout_marginBottom="2dp"
            android:background="@drawable/down_time"
            android:contentDescription="@string/appwidget_text"
            android:padding="4dp"
            android:text="@string/appwidget_text"
            android:textColor="#000000"
            android:textSize="14sp"
    />

    <TextView
            android:id="@+id/lw_textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginRight="@dimen/widget_margin"
            android:background="@drawable/up_time"
            android:contentDescription="@string/appwidget_text"
            android:padding="4dp"
            android:text="@string/appwidget_text"
            android:textColor="#ffffff"
            android:textSize="14sp"
    />
</LinearLayout>